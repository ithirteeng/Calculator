<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="whiteButtonsStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:stateListAnimator">@animator/button_animation</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:stateListAnimator">@animator/button_animation</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="bigButtonStyle">
        <item name="android:background">@drawable/big_button</item>
        <item name="android:stateListAnimator">@animator/button_animation</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_width">@dimen/bigButtonWidth</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>